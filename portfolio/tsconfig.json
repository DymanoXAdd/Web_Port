{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "jsx": "preserve", // or "react-jsxdev" for development, "preserve" or "react" for older setups
    "jsxImportSource": "react", // or "preact" if you're using Preact
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
, "env.ts", "src/sanity/lib/env.client.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
